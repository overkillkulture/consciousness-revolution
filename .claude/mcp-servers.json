{
  "mcpServers": {
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"],
      "description": "Real-time git operations for Trinity sync"
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", ".consciousness", ".trinity"],
      "description": "Direct access to Trinity coordination files"
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Shared knowledge graph state between instances"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "<add-your-token>"
      },
      "description": "GitHub operations for overkor-tek repos"
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "description": "Web content fetching for research"
    },
    "trinity": {
      "command": "node",
      "args": ["C:/Users/dwrek/Downloads/trinity-mcp-server/build/index.js"],
      "description": "Native Trinity communication - send messages, update status, coordinate instances",
      "tools": [
        "trinity_update_status",
        "trinity_read_status",
        "trinity_send_message",
        "trinity_list_messages",
        "trinity_read_file"
      ]
    }
  }
}
