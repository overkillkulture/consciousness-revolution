# Environment Configuration Template
# Copy this to .env and fill in your values

# ============= Pattern Theory Engine =============
PATTERN_ENGINE_PATH=/app/PATTERN_THEORY_ENGINE
# Production: /app/PATTERN_THEORY_ENGINE
# Local Dev: /path/to/your/PATTERN_THEORY_ENGINE

# ============= Database =============
DATABASE_URL=postgresql://user:password@localhost:5432/consciousness_platform
# Railway PostgreSQL format: postgresql://user:password@host:port/dbname

# ============= Authentication =============
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_EXPIRATION_DAYS=30

# OAuth 2.0 - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5002/api/auth/oauth/google/callback

# OAuth 2.0 - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:5002/api/auth/oauth/github/callback

# ============= Stripe Payments =============
STRIPE_API_KEY=sk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_PRO=price_your_pro_tier_price_id
STRIPE_PRICE_ID_ENTERPRISE=price_your_enterprise_tier_price_id

# ============= Email =============
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@consciousnessplatform.com
SENDGRID_FROM_NAME=Consciousness Platform

# ============= API Configuration =============
PORT=5002
FLASK_ENV=development
# Production: FLASK_ENV=production

# ============= Frontend URL =============
FRONTEND_URL=http://localhost:3000
# Production: https://yourdomain.com

# ============= CORS Origins =============
CORS_ORIGINS=http://localhost:3000,http://localhost:5002
# Production: Add your production domains

# ============= Redis (Optional) =============
REDIS_URL=redis://localhost:6379
# Railway Redis: redis://user:password@host:port

# ============= Logging =============
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============= Sentry (Error Tracking) =============
SENTRY_DSN=your_sentry_dsn_here
# Leave empty to disable

# ============= Rate Limiting =============
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100 per hour
